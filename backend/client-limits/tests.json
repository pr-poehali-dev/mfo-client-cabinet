{
  "tests": [
    {
      "name": "OPTIONS for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Get limit without phone",
      "method": "GET",
      "path": "/",
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Phone parameter required"
      }
    },
    {
      "name": "Get nonexistent client",
      "method": "GET",
      "path": "/?phone=79999999999",
      "expectedStatus": 404,
      "expectedBody": {
        "error": "Client not found"
      },
      "bodyMatcher": "partial"
    }
  ]
}
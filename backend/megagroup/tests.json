{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "GET without phone",
      "method": "GET",
      "path": "/",
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "GET with phone parameter",
      "method": "GET",
      "path": "/?phone=79991234567",
      "expectedStatus": 200,
      "expectedBody": {
        "success": "boolean"
      },
      "bodyMatcher": "partial"
    }
  ]
}

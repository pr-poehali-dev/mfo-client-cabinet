  "tests": [
    {
      "name": "OPTIONS for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Get limit without phone",
      "method": "GET",
      "path": "/",
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Phone parameter required"
      }
    },
    {
      "name": "Create client limit",
      "method": "POST",
      "path": "/",
      "body": {
        "phone": "79991234567",
        "full_name": "Тестовый Клиент",
        "max_loan_amount": 150000,
        "current_debt": 0
      },
      "expectedStatus": 200,
      "expectedBody": {
        "phone": "string",
        "max_loan_amount": "number",
        "available_limit": "number"
      },
      "bodyMatcher": "partial"
    }
  ]
}